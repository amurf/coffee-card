{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@coffee-card/shared": ["../shared/src/index.ts"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "../shared/src/*"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
